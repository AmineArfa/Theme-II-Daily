
<article class="gh-card {{post_class}}{{#if feature_image}} {{else}} no-image{{/if}}{{#match @index "0"}} large{{/match}}{{#is featured}} featured{{/is}}">
    <a class="gh-card-link" href="{{url}}">
        {{#if feature_image}}
            <div class="gh-card-image">
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 700px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                >
            </div>
        {{/if}}
        <div class="gh-card-wrapper">
            <header class="gh-card-header">
                {{#primary_tag}}
                    <span class="gh-card-tag">{{name}}</span>
                {{/primary_tag}}
                <h3 class="gh-card-title">{{title}}</h3>
            </header>
            <div class="gh-card-excerpt">
                <p>{{excerpt}}</p>
            </div>
            <footer class="gh-card-footer">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                {{#if reading_time}}
                    <span>{{reading_time}}</span>
                {{/if}}
            </footer>
        </div>
    </a>
</article>
