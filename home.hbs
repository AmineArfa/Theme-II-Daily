{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        
        <div class="gh-main-content-wrapper">
            <div class="gh-main-content">
                <section class="gh-topic gh-topic-grid" style="margin-top: 20px;">
            <div class="gh-topic-content">
                {{#get "posts" filter="tag:-live" limit="7"}}
                    {{#foreach posts}}
                        {{> "loop-grid"}}
                    {{/foreach}}
                {{/get}}
            </div>

            <footer class="gh-topic-footer">
                {{#match pagination.pages ">" 1}}
                    <a class="gh-topic-link" href="{{@site.url}}/page/2">Show more {{> "icons/arrow"}}</a>
                {{/match}}
            </footer>
        </section>

        {{! Live Banner - Mobile/Tablet position - Moved below first article section }}
        <div class="gh-live-banner gh-live-banner-mobile">
            <div class="gh-live-banner-header">
                <h2 class="gh-live-banner-title">
                    <span class="gh-live-indicator">
                        <span class="gh-live-dot"></span>
                        LIVE
                    </span>
                    Daily news
                </h2>
            </div>
            <div class="gh-live-banner-content">
                {{#get "posts" filter="tag:live" limit="8" include="authors"}}
                    {{#if posts}}
                        {{#foreach posts}}
                            <article class="gh-live-banner-item">
                                <a href="{{url}}" class="gh-live-banner-link">
                                    <time class="gh-live-banner-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="HH:mm"}}</time>
                                    <h4 class="gh-live-banner-headline">{{title}}</h4>
                                    {{#if excerpt}}
                                        <p class="gh-live-banner-excerpt">{{excerpt words="12"}}</p>
                                    {{/if}}
                                </a>
                            </article>
                        {{/foreach}}
                    {{else}}
                        {{! Fallback to latest posts if no live posts }}
                        {{#get "posts" limit="6" include="authors"}}
                            {{#foreach posts}}
                                <article class="gh-live-banner-item">
                                    <a href="{{url}}" class="gh-live-banner-link">
                                        <time class="gh-live-banner-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="HH:mm"}}</time>
                                        <h4 class="gh-live-banner-headline">{{title}}</h4>
                                        {{#if excerpt}}
                                            <p class="gh-live-banner-excerpt">{{excerpt words="12"}}</p>
                                        {{/if}}
                                    </a>
                                </article>
                            {{/foreach}}
                        {{/get}}
                    {{/if}}
                {{/get}}
            </div>
        </div>

        {{#if @custom.enter_tag_slugs_for_primary_sections}}
            {{#get "tags" filter="slug:[{{@custom.enter_tag_slugs_for_primary_sections}}]"}}
                {{#foreach tags}}
                    {{> "topic-grid"}}
                {{/foreach}}
            {{/get}}
        {{else}}
            {{#match posts.length ">" 1}}
                {{#get "tags" include="count.posts" order="count.posts desc" limit="3"}}
                    {{#foreach tags}}
                        {{> "topic-grid"}}
                    {{/foreach}}
                {{/get}}
            {{/match}}
        {{/if}}

        {{#if @custom.enter_tag_slugs_for_secondary_sections}}
            {{#get "tags" filter="slug:[{{@custom.enter_tag_slugs_for_secondary_sections}}]"}}
                {{#if tags}}
                    <div class="gh-topic-list">
                        {{#foreach tags}}
                            {{> "topic-minimal"}}
                        {{/foreach}}
                    </div>
                {{/if}}
            {{/get}}
        {{else}}
            {{#match posts.length ">" 1}}
                {{#get "tags" include="count.posts" order="count.posts desc"}}
                    {{#if tags.[3]}}
                        <div class="gh-topic-list">
                            {{#foreach tags from="4" limit="3"}}
                                {{> "topic-minimal"}}
                            {{/foreach}}
                        </div>
                    {{/if}}
                {{/get}}
            {{/match}}
        {{/if}}

            </div>

            {{! Live Banner - Desktop position }}
            <aside class="gh-live-banner gh-live-banner-desktop">
                <div class="gh-live-banner-header">
                    <h2 class="gh-live-banner-title">
                        <span class="gh-live-indicator">
                            <span class="gh-live-dot"></span>
                            LIVE
                        </span>
                        Daily news
                    </h2>
                </div>
                <div class="gh-live-banner-content">
                    {{#get "posts" filter="tag:live" limit="10" include="authors"}}
                        {{#if posts}}
                            {{#foreach posts}}
                                <article class="gh-live-banner-item">
                                    <a href="{{url}}" class="gh-live-banner-link">
                                        <time class="gh-live-banner-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="HH:mm"}}</time>
                                        <h4 class="gh-live-banner-headline">{{title}}</h4>
                                        {{#if excerpt}}
                                            <p class="gh-live-banner-excerpt">{{excerpt words="15"}}</p>
                                        {{/if}}
                                    </a>
                                </article>
                            {{/foreach}}
                        {{else}}
                            {{! Fallback to latest posts if no live posts }}
                            {{#get "posts" limit="8" include="authors"}}
                                {{#foreach posts}}
                                    <article class="gh-live-banner-item">
                                        <a href="{{url}}" class="gh-live-banner-link">
                                            <time class="gh-live-banner-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="HH:mm"}}</time>
                                            <h4 class="gh-live-banner-headline">{{title}}</h4>
                                            {{#if excerpt}}
                                                <p class="gh-live-banner-excerpt">{{excerpt words="15"}}</p>
                                            {{/if}}
                                        </a>
                                    </article>
                                {{/foreach}}
                            {{/get}}
                        {{/if}}
                    {{/get}}
                </div>
            </aside>
        </div>
        
    </div>
</main>